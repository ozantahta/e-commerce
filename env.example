# Service Configuration
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
MONGODB_URL=mongodb://admin:admin123@localhost:27017/e-commerce?authSource=admin

# Message Queue Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# Order Service
ORDER_SERVICE_PORT=3001

# Inventory Service
INVENTORY_SERVICE_PORT=3002

# Notification Service
NOTIFICATION_SERVICE_PORT=3003
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_MS=1000
RETRY_MAX_BACKOFF_MS=10000

# Message Queue
MQ_EXCHANGE=e-commerce.events
MQ_DEAD_LETTER_EXCHANGE=e-commerce.dlq
MQ_MESSAGE_TTL=30000
MQ_MAX_RETRIES=3
